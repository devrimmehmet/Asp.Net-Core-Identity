@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Sıfırlama</h2>
        <div class="alert-info">Şifre yenileme linki, eposta adresinize gönderilecektir.</div>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <form method="post">
            <div class="row mb-3">

                <div class="col-md-8">
                    <label for="Email" class="col-md-2 col-form-label" asp-for="Email"></label>
                    <input asp-for="Email" value="devrimmehmet@gmail.com" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>
